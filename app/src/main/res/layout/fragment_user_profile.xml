<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/newbg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="38dp"
            android:elevation="4dp"
            android:paddingBottom="2dp"
            android:scaleType="centerCrop">


            <ImageView
                android:id="@+id/user_img"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/privateinfo" />


        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <mycodlabs.utils.MYTextView

                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="Name"
                    android:textSize="32dp"
                    android:textStyle="bold" />
           <mycodlabs.utils.MYTextView

                android:id="@+id/user_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:padding="20dp"
                android:layout_weight="2"
                android:text="Email"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <!--<rpr.utils.MYTextView
                    app:font="montserrat_regular.ttf"-->
            <!--android:id="@+id/subscriptions"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="5dp"-->
            <!--android:background="#fff"-->
            <!--android:clickable="true"-->
            <!--android:padding="20dp"-->

            <!--android:textColor="#212121"-->
            <!--android:text="Subscriptions" />-->



           <mycodlabs.utils.MYTextView

                android:id="@+id/user_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="20dp"
                android:text="Usertype"
                android:textAlignment="center"
                android:textColor="@color/black"/>


                <mycodlabs.utils.MYButton

                    android:id="@+id/bchangepass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:enabled="false"
                    android:layout_margin="10dp"
                    android:background="@drawable/signupbutton"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="Change Password" />n

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>