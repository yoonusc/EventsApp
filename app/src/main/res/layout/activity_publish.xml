                        <!--<rpr.utils.MYTextView
                    app:font="montserrat_regular.ttf"-->
                        <!--android:id="@+id/textView7"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"-->
                        <!--android:textAlignment="center"-->
